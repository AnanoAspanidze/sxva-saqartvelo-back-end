@model PagedList.IPagedList<sxva_saqartvelo_back_end.Models.Freelancer>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" />
<link href="~/css/mystyle.css" rel="stylesheet" />
<section id="hero-section">
    <form action="" class="form-group search-window">
        <input type="text" class="searchInput" aria-describedby="emailHelp" placeholder="ძებნა">
        <button class="search-button"><img src="/img/search.svg" alt=""></button>
    </form>
</section>

<div class="container-fluid main-container" id="candidats-with-filter">
    <div class="row">
        <div class="col-xs-6 col-sm-3 filter">
            <div id="filters" class="">
                <div class="panel-heading">
                    <br>
                    <h3 class="panel-title">ძებნა</h3>
                    <p>ნაპოვნია 151 ადამიანი</p>
                </div>
                <div class="line"></div>
                <br />
                <section class="possibilities-section">
                    <span class="filter-name">
                        <span class="possibilities-headline">
                            შესაძლებლობები
                            <img src="/img/arrow-red.svg" alt="show more" id="ps-up">
                        </span>
                    </span>
                    <form class="possibilities">
                        <div class="row">
                            <label class="col-sm"><input type="checkbox"><span><img src="/img/checkbox.svg" class="checkbox">HTML</span></label>
                            <label class="col-sm"><input type="checkbox"><span><img src="/img/checkbox.svg" class="checkbox">CSS</span></label>
                        </div>
                        <div class="row">
                            <label class="col-sm"><input type="checkbox"><span><img src="/img/checkbox.svg" class="checkbox">Javascript</span></label>
                            <label class="col-sm"><input type="checkbox"><span><img src="/img/checkbox.svg" class="checkbox">TypeScript</span></label>
                        </div>
                        <div class="row">
                            <label class="col-sm"><input type="checkbox"><span><img src="/img/checkbox.svg" class="checkbox">React</span></label>
                            <label class="col-sm"><input type="checkbox"><span><img src="/img/checkbox.svg" class="checkbox">React Native</span></label>
                        </div>
                        <div class="row">
                            <label class="col-sm"><input type="checkbox"><span><img src="/img/checkbox.svg" class="checkbox">Angular 2</span></label>
                            <label class="col-sm"><input type="checkbox"><span><img src="/img/checkbox.svg" class="checkbox">Mongo DB</span></label>
                        </div>
                        <div class="row">
                            <label class="col-sm"><input type="checkbox"><span><img src="/img/checkbox.svg" class="checkbox">HTML</span></label>
                            <label class="col-sm"><input type="checkbox"><span><img src="/img/checkbox.svg" class="checkbox">CSS</span></label>
                        </div>
                        <br>
                        <!-- <div class="bullet-pagination">
                            <span class="bullet"></span>
                            <span class="active-bullet"></span>
                            <span class="bullet"></span>
                            <span class="bullet"></span>
                        </div> -->
                    </form>
                </section>

                <div class="line"></div>
                <br>

                <section class="rating-section">
                    <span class="filter-name">
                        <span class="rating-headline">
                            რეიტინგი
                            <img src="/img/arrow-red.svg" alt="show more" id="rat-up">
                        </span>
                    </span>
                    <form class="row rating-from-to">
                        <input type="text" placeholder="0" class="col min-rat" id="rating_low" value="0">
                        <input type="text" id="rating_hight" placeholder="100" class="col max-rat" value="100">

                        <!-- <div class="row slider-range-two">
                            <span class="rangeValues"></span>
                            <input value="500" min="500" max="50000" step="500" type="range">
                            <input value="50000" min="500" max="50000" step="500" type="range">
                        </div> -->
                        <br>

                        <div style="" id="line">
                            <div id="buutonaut">
                                <div id="button1">

                                </div>
                            </div>
                            <div id="buutonaut2">
                                <div id="button2">

                                </div>
                            </div>
                        </div>


                    </form>
                </section>
                <br />
                <div class="line col-xs-12 col-sm-12"></div>
                <br />

                <p class="clear-search">
                    <img src="/img/reset.svg" alt="clear search">
                    გასუფთავება
                </p>
                <div class="line"></div>
            </div>
        </div>

        <div class="col candidats-on-listing-page">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="candidat col-xl-4 col-sm-6 text-center">
                        <div>
                            <div class="hover">
                                <a href="" class="image-a" style="background-image: url(/img/pp/default-freelancer-pic.png);">
                                    <img class="img-thumbnail img-candidat" src="~/img/pp/default-freelancer-pic.png" alt="profile picture">
                                </a>
                            </div>
                            <div class="candidat-text-content">
                                <a href=""><h3 class="candidat-name-fn">@item.Name @item.Surname</h3></a>
                                <ul class="candidat-skils-fn">
                                    @{
                                        var skilss = item.Freelancer_Skill.ToList();
                                    }
                                    @foreach (var i in skilss)
                                    {
                                        <li><a href="#"></a>@i.Skill.Name</li>
                                    }
                                </ul>
                                <ul class="candidat-statistics-fn candidat-statistics">
                                    <li>განხორციელებული პროექტები: <a href="#">3</a></li>
                                    <li>რეიტინგი: 10 / 10</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                 }

            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { LinkToFirstPageFormat = "« პირველი", LinkToPreviousPageFormat = "« წინა", LinkToNextPageFormat = "შემდეგი »", LinkToLastPageFormat = "ბოლო »" }) 
                </ul>
            </nav>
        </div>
    </div>
</div>

<script src="~/Scripts/JS/printCandidats.js"></script>
<script src="~/Scripts/JS/interaction.js"></script>
<script src="~/Scripts/JS/filter.js"></script>