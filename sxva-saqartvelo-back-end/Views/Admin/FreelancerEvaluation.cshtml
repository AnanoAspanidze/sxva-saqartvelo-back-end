@model sxva_saqartvelo_back_end.Models.FreelancerEvaluationModel

@{
    ViewBag.Title = "FreelancerEvaluation";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <br />
        <h4 style="padding-left:5px">ფრილანსერის შეფასება</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.freelancer.ID)
        <div class="form-group">
            <label class="control-label col-md-2" for="freelancer_Name">სახელი</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.freelancer.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.freelancer.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="freelancer_Name">გვარი</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.freelancer.Surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.freelancer.Surname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="freelancerEvaluation" for="FreelancerRating">ფრილანსერის რეიტინგი</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FreelancerRating, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FreelancerRating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="freelancerEvaluation" for="FreelancerRating">ფრილანსერის შეფასება</label>
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.FreelancerEvaluation, "", new { @class = "text-danger" })
                @Html.TextAreaFor(model => model.FreelancerEvaluation, new { @id = "FreelancerEvaluation", @class = "form-control", @rows = "200" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="შეფასება" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<script>
    CKEDITOR.replace("FreelancerEvaluation");
</script>
